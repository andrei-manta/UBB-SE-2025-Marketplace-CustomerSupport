<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="Marketplace_SE.AdminFindHelpTicket"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Marketplace_SE"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <TextBlock Text="Look up tickets by User ID and/or by creation date" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <TextBox PlaceholderText="User ID" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             Width="250"
             x:Name="TextBoxLookupHelpTicketUserID"/>
            <TextBox PlaceholderText="Creation date dd-mm-yyyy" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center" 
             Width="250"
             x:Name="TextBoxLookupHelpTicketCreationDate"/>
            <CheckBox 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Content="Search only this exact date" Checked="CheckedCheckBoxAdminFindTicketSearchExactDate" Unchecked="UncheckedCheckBoxAdminFindTicketSearchExactDate" x:Name="CheckBoxAdminFindTicketSearchExactDate"/>
            <CheckBox 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Content="Search starting from this date" Checked="CheckedCheckBoxAdminFindTicketSearchStartingDate" Unchecked="UncheckedCheckBoxAdminFindTicketSearchStartingDate" x:Name="CheckBoxAdminFindTicketSearchStartingDate"/>
            <CheckBox 
                HorizontalAlignment="Center" 
                VerticalAlignment="Center"
                Content="Search up to this date" Checked="CheckedCheckBoxAdminFindTicketSearchEndingDate" Unchecked="UncheckedCheckBoxAdminFindTicketSearchEndingDate" x:Name="CheckBoxAdminFindTicketSearchEndingDate"/>
            <TextBlock Text="User ID not found!" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockAdminFindHelpTicketUserIDNotFound" Visibility="Collapsed"/>
            <TextBlock Text="Wrong date!" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockAdminFindHelpTicketWrongDate" Visibility="Collapsed"/>
            <TextBlock Text="Choose a checkbox!" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockAdminFindHelpTicketChooseCheckbox" Visibility="Collapsed"/>
            <TextBlock Text="Chosen date can't be in the future!" HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="TextBlockAdminFindHelpTicketChosenDayCantBeInFuture" Visibility="Collapsed"/>
            <Button Content="Search" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="250" 
                            Height="50" 
                            Click="OnButtonClickAdminSearchHelpTicket"
                            x:Name="ButtonAdminSearchHelpTicket"/>
            <Button Content="Return" 
                            HorizontalAlignment="Center" 
                            VerticalAlignment="Center" 
                            Width="250" 
                            Height="50" 
                            Click="OnButtonClickNavigateAdminSearchHelpTicketPageAdminAccountPage"
                            x:Name="ButtonNavigateAdminSearchHelpTicketPageAdminAccountPage"/>
        </StackPanel>
    </Grid>
</Page>
