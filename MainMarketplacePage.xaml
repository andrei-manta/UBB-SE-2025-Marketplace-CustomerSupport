                                    <Button Content="Buy item" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Width="150" 
                                        Height="50" 
                                        Click="OnButtonClickBuyItem"
                                        x:Name="ButtonBuyItem6"/>
