                                <StackPanel Orientation="Vertical">
                                    <TextBlock Text="Car - Brand - Cost" HorizontalAlignment="Left" VerticalAlignment="Center" />
                                    <Button Content="Buy item" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Width="150" 
                                        Height="50" 
