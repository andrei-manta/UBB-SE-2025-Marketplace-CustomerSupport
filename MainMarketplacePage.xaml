                                        x:Name="ButtonBuyItem8"/>
                                    <Button Content="Chat with seller" 
                                        HorizontalAlignment="Center" 
                                        VerticalAlignment="Center" 
                                        Width="150" 
                                        Height="50" 
                                        Click="OnButtonClickChatWithSeller"
                                        x:Name="ButtonChatWithSeller8"/>
                                </StackPanel>
                            </Border>
                        </StackPanel>
